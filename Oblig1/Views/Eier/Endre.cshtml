    </div>

    <div class="form-group">
        <label asp-for="antallAnnonser"> Date </label><span class="text-danger">*</span>
        <input asp-for="antallAnnonser" class="form-control" />
        <span asp-validation-for="antallAnnonser" class="text-danger"></span>
    </div>

   

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Tabell" class="btn btn-secondary">Abort</a>

</form>