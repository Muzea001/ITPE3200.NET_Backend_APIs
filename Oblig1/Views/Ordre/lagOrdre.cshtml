@model Oblig1.Models.Person


<h2>Lag Ordre</h2>
<form asp-action="lagOrdre">
    
    <div class="form-group">
        <label asp-for="Navn"></label><span class="text-danger">*</span>
        <input asp-for="Navn" class="form-control" />
        <span asp-validation-for="Navn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fodselsdato"></label><span class="text-danger">*</span>
        <input asp-for="Fodselsdato" type="date" class="form-control" />
        <span asp-validation-for="Fodselsdato" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Addresse"></label><span class="text-danger">*</span>
        <input asp-for="Addresse" class="form-control" />
        <span asp-validation-for="Addresse" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TelefonNmr"></label><span class="text-danger">*</span>
        <input asp-for="TelefonNmr" class="form-control" />
        <span asp-validation-for="TelefonNmr" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label><span class="text-danger">*</span>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" asp-controller="Ordre" asp-action="lagOrdre">Create</button>
    <a asp-controller="Ordre" asp-action="Tabell" class="btn btn-secondary">Back to Table View</a>
</form>