@model Oblig1.Models.Ordre
<div class="col-md-6">
<div class="form ml-5 pl-5" id="ordreForm">
    <h2>Lag Ordre</h2>
        <form asp-controller="Ordre" asp-action="Lag" method="post">
            
            <div class="form-group">
                <label asp-for="kunde.Person.Navn"></label><span class="text-danger">*</span>
                <input asp-for="kunde.Person.Navn" class="form-control" />
