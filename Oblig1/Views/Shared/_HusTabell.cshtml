@model IEnumerable<Oblig1.Models.Hus>

<div class="container">
    <table class='table table-striped'>
        <tr>
            <th>Id</th>
            <th>Hus eier</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.</td>
                <td>
                    <a asp-controller="Hus"
                       asp-action="Oversikt"
                       asp-route-id="@item.husId">@item.husId</a>
                </td>
                <td>@item.Pris.ToString("0.00 NOK")</td>
                <td>@item.Beskrivelse</td>
                <td>
                    <img src="@item.bildeURL" alt="Item Image" style="max-width: 80px; max-height: 80px;" />
                </td>
                <td>
                    <a asp-action="endreHus" asp-route-id="@item.husId">Update</a>
                    <a asp-action="slettHus" asp-route-id="@item.husId">Delete</a>
                </td>
            </tr>
        }
    </table>
    <p>
        <a class="btn btn-secondary"
           asp-controller="Hus"
           asp-action="Create">Create New Item</a>
    </p>
</div>