@model Oblig1.Models.Hus
<h2>Add a New House</h2>

<form asp-action="lagHus" asp-controller="Hus" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Beskrivelse">Description</label>
        <input asp-for="Beskrivelse" class="form-control" />
        <span asp-validation-for="Beskrivelse" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="areal">Area</label>
        <input asp-for="areal" class="form-control" />
        <span asp-validation-for="areal" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Pris">Price</label>
        <input asp-for="Pris" class="form-control" />
        <span asp-validation-for="Pris" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="by">City</label>
        <input asp-for="by" class="form-control" />
        <span asp-validation-for="by" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Addresse">Address</label>
        <input asp-for="Addresse" class="form-control" />
        <span asp-validation-for="Addresse" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="romAntall">Number of Rooms</label>
        <input asp-for="romAntall" class="form-control" />
        <span asp-validation-for="romAntall" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="harParkering">Has Parking</label>
        <input asp-for="harParkering" type="checkbox" />
    </div>

    <div class="form-group">
        <label for="erMoblert">Is Furnished</label>
        <input asp-for="erMoblert" type="checkbox" />
    </div>

    <div class="form-group">
        <label for="bildeListe">Upload Images</label>
        <input type="file" name="bildeListe" accept="image/*" multiple required />
    </div>

    <div class="form-group">
        <label for="eier.kontoNummer">Owner Account Number</label>
        <input asp-for="eier.kontoNummer" class="form-control" />
        <span asp-validation-for="eier.kontoNummer" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add House</button>
</form>