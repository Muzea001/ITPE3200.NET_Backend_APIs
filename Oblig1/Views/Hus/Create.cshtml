@model Oblig1.Models.Hus
<h2>Create New Item</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="eier.kontoNummer">Owner's account number </label><span class="text-danger">*</span>
        <input asp-for="eier.kontoNummer" class="form-control" />
        <span asp-validation-for="eier.kontoNummer" class="text-danger"></span>
    </div>
    <div class="class=" form-group">
        <label asp-for="eier.Person.Addresse">owner's address</label><span class="text-danger">*</span>
        <input asp-for="eier.Person.Addresse" class="form-control" />
        <span asp-validation-for="eier.Person.Addresse" class="text-danger"></span>
    </div>
    <div class="class=" form-group">
        <label asp-for="eier.Person.Email">Owner's E-Mail</label><span class="text-danger">*</span>
        <input asp-for="eier.Person.Email" class="form-control" />
        <span asp-validation-for="eier.Person.Email" class="text-danger"></span>
    </div>
    <div class="class=" form-group">
        <label asp-for="eier.Person.Fodselsdato">Owner's birth date</label><span class="text-danger">*</span>
        <input asp-for="eier.Person.Fodselsdato" class="form-control" />
        <span asp-validation-for="eier.Person.Fodselsdato" class="text-danger"></span>
    </div>
    <div class="class=" form-group">
        <label asp-for="eier.Person.Navn">Name</label><span class="text-danger">*</span>
        <input asp-for="eier.Person.Navn" class="form-control" />
        <span asp-validation-for="eier.Person.Navn" class="text-danger"></span>
    </div>
    <div class="class=" form-group">
        <label asp-for="eier.Person.personID">Social security number</label><span class="text-danger">*</span>
        <input asp-for="eier.Person.personID" class="form-control" />
        <span asp-validation-for="eier.Person.personID" class="text-danger"></span>
    </div>
    <div class="class=" form-group">
        <label asp-for="eier.Person.TelefonNmr">Telephone number</label><span class="text-danger">*</span>
        <input asp-for="eier.Person.TelefonNmr" class="form-control" />
        <span asp-validation-for="eier.Person.TelefonNmr" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Addresse">House Adresss</label><span class="text-danger">*</span>
        <input asp-for="Addresse" class="form-control" />
        <span asp-validation-for="Addresse" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="by">City</label><span class="text-danger">*</span>
        <input asp-for="by" class="form-control" />
        <span asp-validation-for="by" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="areal">Areal</label>
        <input asp-for="areal" class="form-control" type="number" />
        <span asp-validation-for="areal" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pris">Price</label>
        <input asp-for="Pris" class="form-control" type="number" />
        <span asp-validation-for="Pris" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="romAntall">Number of Rooms</label>
        <input asp-for="romAntall" class="form-control" type="number" />
        <span asp-validation-for="romAntall" class="text-danger"></span>
    </div>
    <label for="harparkering">Parkering:</label>
    <select class="form-control" asp-for="harParkering">
        <option value="True">JA</option>
        <option value="False">NEI</option>
    </select>
    <label for="erMoblert">Moblert:</label>
    <select class="form-control" asp-for="erMoblert">
        <option value="True">JA</option>
        <option value="False">NEI</option>
    </select>
    <div class="form-group">
        <label for="Beskrivelse">Hus Beskrivelse:</label>
        <textarea class="form-control" asp-for="Beskrivelse" rows="5" required></textarea>
    </div>
    <div class="form-group">
        <label for="bildeURL">Last opp bilder :</label>
        <input asp-for="bildeListe">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Grid" class="btn btn-secondary">Back to Table View</a>
</form>
