@model Oblig1.Models.Hus

<head>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

</head>

<h3 class="my-5">
    @Model.Addresse
</h3>

<div class="row">

    <div class="col-md-6">
    <div class="item-card">
        <img id="imageDisplay" alt="@Model.bildeListe[0].bilderUrl" src="@Model.bildeListe[0].bilderUrl" class="img-fluid" style="max-width: 300px; max-height: 200px;" />
        <div class="card-body">
            <script>
                var currentIndex = 0;
                var imageUrls = @Html.Raw(Json.Serialize(Model.bildeListe));

                function showImage(offset) {
                    currentIndex += offset;
                    if (currentIndex < 0) {
                        currentIndex = imageUrls.length - 1;
                    } else if (currentIndex >= imageUrls.length) {
                        currentIndex = 0;
                    }
                    var imageDisplay = document.getElementById('imageDisplay');
                    imageDisplay.src = imageUrls[currentIndex].bilderUrl;
                    imageDisplay.alt = imageUrls[currentIndex].bilderUrl;
                }
            </script>
            <button id="prevButton" onclick="showImage(-1)">></button>
            <button id="nextButton" onclick="showImage(1)"><</button>
        </div>
    </div>
    
            <h5 class="card-title">House Details</h5>
            <p class="card-text">Areal: <span class="text-muted">@Model.areal</span></p>
            <p class="card-text">by: <span class="text-muted">@Model.by</span></p>
            <p class="card-text">Roomantall: <span class="text-muted">@Model.romAntall</span></p>
            <p class="card-text">Parking: <span class="text-muted">@Model.harParkering</span></p>
            <p class="card-text">Pris: <span class="text-muted">@Model.Pris</span></p>
            <p class="card-text">tilgjenlighet: <span class="text-muted">@Model.erTilgjengelig</span></p>
            <form asp-controller="Ordre" asp-action="lagOrdre">
            <button type="button" class="btn btn-info">
                <a asp-controller="Ordre"
                   asp-action="lagOrdre"
                 asp-route-husId="@Model.husId">
  
                    Lag 
                </a>
            </button>
            </form>
        </div>
    </div>



</div>





<script>
    $(document).ready(function () {
        $("#bestillKnapp").click(function (e) {
            e.preventDefault();  // Prevent the default action
            $("#ordreForm").toggle();
        });
    });
</script>

<style>
    .item-card {
        flex-grow: 1;
        margin-right: 50px; /* Adjust the margin as needed */
    }

    .form {
        flex-grow: 2; /* Adjust the growth as needed */
    }
</style>
