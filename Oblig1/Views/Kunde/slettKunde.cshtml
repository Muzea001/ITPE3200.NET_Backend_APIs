@model Oblig1.Models.Kunde
<h2>Slett Kunde</h2>

<h3>Er du sikker at du vil slette dette Kunde</h3>
<div>
    <h4>Kunde</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Kunde Id</dt>
        <dd class="col-sm-10">@Model.kundeId</dd>

        <dt class="col-sm-2">Navn</dt>
        <dd class="col-sm-10">@Model.Navn</dd>

        <dt class="col-sm-2">Fodselsdato</dt>
        <dd class="col-sm-10">@Model.Fodselsdato</dd>

        <dt class="col-sm-2">Telefon Nummer</dt>
        <dd class="col-sm-10">@Model.TelefonNmr</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Addresse</dt>
        <dd class="col-sm-10">@Model.Addresse</dd>
    </dl>

    <form asp-action="Slett" asp-route-id="@Model.kundeId" method="post">
        <button type="submit" class="btn btn-danger">Slett</button>
        <a asp-action="Oversikt" class="btn btn-secondary">Avbryt</a>
    </form>
</div>