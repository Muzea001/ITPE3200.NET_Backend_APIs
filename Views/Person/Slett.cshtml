@model Oblig1.Models.Person

<h3>Are you sure you want to delete this Person!</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Person Name</dt>
        <dd class="col-sm-10">@Model.Navn</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Telephon number</dt>
        <dd class="col-sm-10">@Model.TelefonNmr</dd>

        <dt class="col-sm-2">Adress</dt>
        <dd class="col-sm-10">@Model.Addresse</dd>


    </dl>

    <form asp-action="SlettBekreftet" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger">Slett</button>
        <a asp-controller="Person" asp-action="Tabell" class="btn btn-secondary">Avbryt</a>
    </form>
</div>